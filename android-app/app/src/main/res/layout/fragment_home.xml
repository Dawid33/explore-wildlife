<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="40dp"
    android:layout_marginTop="80dp"
    tools:context=".ui.app.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="150dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/bg_rounded_corners">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discover"
                    android:textColor="@color/columbia_blue"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="-6dp" />

                <Button
                    android:id="@+id/moreInfoHome"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="···"
                    android:textColor="@color/columbia_blue"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="-15dp"
                    android:layout_marginEnd="-10dp"
                    app:layout_constraintWidth_max="55dp" />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill|fill_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/moreInfoHome">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sceneryDiscoveryButton"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/mountain_draw_lg"
                            android:backgroundTint="@color/myrtle_green"
                            app:tint="@color/myrtle_green" />

                        <TextView
                            android:id="@+id/sceneryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Scenery"
                            android:textAlignment="center"
                            android:textColor="@color/myrtle_green" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                        android:id="@+id/animalsDiscoveryButton"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/wildlife_draw_lg"
                        android:backgroundTint="@color/myrtle_green"
                        app:tint="@color/myrtle_green" />

                        <TextView
                            android:id="@+id/animalsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Animals"
                            android:textAlignment="center"
                            android:textColor="@color/myrtle_green" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/mushroomDiscoveryButton"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/mushroom_draw_lg"
                            android:backgroundTint="@color/myrtle_green"
                            app:tint="@color/myrtle_green" />

                        <TextView
                            android:id="@+id/mushroomsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mushrooms"
                            android:textAlignment="center"
                            android:textColor="@color/myrtle_green" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:background="@drawable/bg_rounded_corners">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achievements"
                    android:textColor="@color/columbia_blue"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="-6dp" />

                <Button
                    android:id="@+id/moreInfoHome2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="···"
                    android:textColor="@color/columbia_blue"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="-15dp"
                    android:layout_marginEnd="-10dp"
                    app:layout_constraintWidth_max="55dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/trophy_draw"
                    app:tint="@color/myrtle_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/moreInfoHome2" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBarAchievements"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:trackThickness="20dp"
                    app:trackColor="@color/myrtle_green"
                    app:indicatorColor="@color/aquamarine"
                    app:trackCornerRadius="10dp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 animals out of 20 collected"
                    android:textColor="@color/myrtle_green"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="13dp"
                    android:layout_marginStart="3dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_rounded_corners">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Images"
                    android:textColor="@color/columbia_blue"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="-6dp" />

                <Button
                    android:id="@+id/moreInfoHome3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="···"
                    android:textColor="@color/columbia_blue"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="-15dp"
                    android:layout_marginEnd="-10dp"
                    app:layout_constraintWidth_max="55dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewPopularPosts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/moreInfoHome3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/goToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go To Login" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>