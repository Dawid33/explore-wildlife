<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".AccountFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"
        app:layout_constraintWidth_percent=".75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_weight="1"
                android:src="@drawable/user_draw"
                app:tint="@color/aquamarine" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="140sp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sergiu\nMereacre"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10sp"
            android:drawableTint="@color/myrtle_green"
            android:text="example@email.com"
            android:textColor="@color/myrtle_green" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phone_call_draw"
            android:drawablePadding="10sp"
            android:drawableTint="@color/myrtle_green"
            android:text="089 000 0000"
            android:textColor="@color/myrtle_green" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:backgroundTint="#040909"
            android:drawableLeft="@drawable/id_card_draw"
            android:drawablePadding="15sp"
            android:drawableTint="#FFFFFF"
            android:paddingLeft="15sp"
            android:text="Account Information"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/myrtle_green" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_round"
            android:backgroundTint="#040909"
            android:drawableLeft="@drawable/padlock_draw"
            android:drawablePadding="15sp"
            android:drawableTint="#FFFFFF"
            android:paddingLeft="15sp"
            android:text="Password"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/myrtle_green" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_round"
            android:backgroundTint="#040909"
            app:trackTint="@drawable/track_color"
            app:thumbTint="@drawable/thumb_color"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="15sp"
            android:drawableTint="@color/myrtle_green"
            android:paddingLeft="15sp"
            android:text="Notifications"
            android:textColor="@color/myrtle_green" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:drawableLeft="@drawable/logout_draw"
            android:text="SIGN OUT"
            android:textColor="@color/app_background" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/goToLoginButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:contentDescription="@string/back_to_login"
        android:scaleType="fitCenter"
        android:src="@drawable/go_back_arrow_draw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/teal_200" />
</androidx.constraintlayout.widget.ConstraintLayout>